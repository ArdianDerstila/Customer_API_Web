@model CustomerImageApp.Web.Models.CustomerListViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customers</title>
    <link rel="stylesheet" href="~/css/list.css">
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="header">
            <h1>Customers</h1>
            <a href="@Url.Action("Create", "Customers")" class="btn btn-success">Add Customer</a>
        </div>

        <!-- Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger")">
                @Model.Message
            </div>
        }

        <!-- Customers Table -->
        <div class="card">
            @if (Model.Customers.Any())
            {
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Customer</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in Model.Customers)
                            {
                                <tr>
                                    <td>
                                        <div class="customer-name">@customer.FullName</div>
                                        <div class="customer-id">ID: @customer.Id</div>
                                        @if (!string.IsNullOrEmpty(customer.Company))
                                        {
                                            <div class="customer-id">@customer.Company</div>
                                        }
                                    </td>
                                    <td>@customer.Email</td>
                                    <td>@customer.Phone</td>
                                    <td>@customer.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="actions">
                                            <a href="@Url.Action("Images", "CustomerImages", new { id = customer.Id })" class="btn">Images</a>
                                            <a href="@Url.Action("Edit", "Customers", new { id = customer.Id })" class="btn btn-secondary">Edit</a>
                                            <form asp-action="Delete" asp-route-id="@customer.Id" method="post" class="delete-form" onsubmit="return confirm('Are you sure you want to delete @customer.FullName?')">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <h3>No customers yet</h3>
                    <p>Start by creating your first customer</p>
                    <a href="@Url.Action("Create", "Customers")" class="btn btn-success">Add Customer</a>
                </div>
            }
        </div>
    </div>
</body>
</html>