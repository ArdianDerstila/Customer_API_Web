@model CustomerImageApp.Web.Models.CustomerImagesViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.CustomerName - Images</title>
    <link rel="stylesheet" href="~/css/images.css">
    <link rel="stylesheet" href="~/css/carousel.css">

</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="header">
            <h1>@Model.CustomerName</h1>
            <p>Customer #@Model.CustomerId • Image Management</p>

            <div class="nav-links">
                <a href="@Url.Action("List", "Customers")" class="nav-link">All Customers</a>
                <a href="@Url.Action("Images", "Customers", new { id = Model.CustomerId })" class="nav-link">Refresh</a>
            </div>
        </div>

        <!-- Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
                @if (TempData["ErrorDetails"] != null)
                {
                    <br>
                    <small>@TempData["ErrorDetails"]</small>
                }
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger")">
                @Model.Message
            </div>
        }

        <!-- Upload Section -->
        <div class="card">
            <div class="card-header">
                <h3>Upload Images</h3>
                <span class="counter">@Model.ImageCount / @Model.MaxImages</span>
            </div>
            <div class="card-body">
                @if (Model.CanUploadMore)
                {
                    <div class="upload-area">
                        <form asp-action="UploadImages" asp-route-customerId="@Model.CustomerId" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <p>Choose images to upload</p>
                            <input type="file" name="files" multiple accept="image/*" class="file-input" required>
                            <br>
                            <button type="submit" class="btn">Upload Images</button>
                            <p class="small-text">JPG, PNG, GIF • Max 5MB each • @(Model.MaxImages - Model.ImageCount) slots remaining</p>
                        </form>
                    </div>
                }
                else
                {
                    <div class="upload-area disabled">
                        <div class="alert alert-warning" style="margin: 0;">
                            <strong>Upload limit reached</strong><br>
                            You have @Model.MaxImages images. Delete some to upload more.
                        </div>
                    </div>
                }

                <!-- Progress Bar -->
                <div class="progress-bar">
                    <div class="progress-fill" style="width: @(((double)Model.ImageCount / Model.MaxImages) * 100)%"></div>
                </div>
                <p class="small-text">@Model.ImageCount of @Model.MaxImages images used</p>
            </div>
        </div>

        <!-- Images Section -->
        <div class="card">
            <div class="card-header">
                <h3>Images</h3>
                <span class="counter">@Model.ImageCount images</span>
            </div>
            <div class="card-body">
                @if (Model.Images.Any())
                {
                    <!-- View Toggle -->
                    <div class="view-toggle">
                        <button class="view-btn active" onclick="switchView('carousel')">Carousel View</button>
                        <button class="view-btn" onclick="switchView('grid')">Grid View</button>
                    </div>

                    <!-- Carousel View -->
                    <div id="carousel-view" class="carousel-container">
                        <div class="carousel-wrapper">
                            <div class="carousel-track" id="carousel-track">
                                @foreach (var image in Model.Images)
                                {
                                    <div class="carousel-slide">
                                        <img src="@Html.Raw(image.ImageData)"
                                             alt="@image.FileName"
                                             onerror="handleImageError(this);" />
                                        <div class="carousel-info">
                                            <div class="carousel-filename">@image.FileName</div>
                                            <div class="carousel-date">@image.UploadedAt.ToString("MMM dd, yyyy")</div>
                                        </div>
                                    </div>
                                }
                            </div>

                            <!-- Navigation Buttons -->
                            <button class="carousel-nav carousel-prev" onclick="prevSlide()">‹</button>
                            <button class="carousel-nav carousel-next" onclick="nextSlide()">›</button>
                        </div>

                        <!-- Indicators -->
                        <div class="carousel-indicators" id="carousel-indicators">
                            @for (int i = 0; i < Model.Images.Count(); i++)
                            {
                                <button class="carousel-indicator @(i == 0 ? "active" : "")" onclick="goToSlide(@i)"></button>
                            }
                        </div>
                    </div>

                    <!-- Grid View -->
                    <div id="grid-view" class="images-grid hidden">
                        @foreach (var image in Model.Images)
                        {
                            <div class="image-item">
                                <img src="@Html.Raw(image.ImageData)"
                                     alt="@image.FileName"
                                     onerror="this.src='data:image/svg+xml;base64,'" />
                                <div class="image-details">
                                    <div class="image-name">@image.FileName</div>
                                    <div class="image-date">@image.UploadedAt.ToString("MMM dd, yyyy")</div>
                                    <form asp-action="DeleteImage"
                                          asp-route-customerId="@Model.CustomerId"
                                          asp-route-imageId="@image.Id"
                                          asp-route-fileName="@image.FileName"
                                          method="post"
                                          style="display: inline;"
                                          onsubmit="return confirm('Delete @image.FileName?')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <h4>No images yet</h4>
                        <p>Upload some images to get started</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <script>
        // Image error handling with fallback
        function handleImageError(img) {
            if (!img.hasAttribute('data-tried-fallback')) {
                // First try: use the fallback API URL
                img.setAttribute('data-tried-fallback', 'true');
                img.src = img.getAttribute('data-fallback-url');
            } else {
                // Second try failed: show error placeholder
                img.onerror = null;
                img.src = 'data:image/svg+xml;base64,';
            }
        }

        // Carousel functionality
        let currentSlide = 0;
        const totalSlides = @Model.Images.Count();

        function updateCarousel() {
            const track = document.getElementById('carousel-track');
            const indicators = document.querySelectorAll('.carousel-indicator');
            const prevBtn = document.querySelector('.carousel-prev');
            const nextBtn = document.querySelector('.carousel-next');

            if (track) {
                track.style.transform = `translateX(-${currentSlide * 100}%)`;
            }

            // Update indicators
            indicators.forEach((indicator, index) => {
                indicator.classList.toggle('active', index === currentSlide);
            });

            // Update navigation buttons
            if (prevBtn) prevBtn.disabled = currentSlide === 0;
            if (nextBtn) nextBtn.disabled = currentSlide === totalSlides - 1;
        }

        function nextSlide() {
            if (currentSlide < totalSlides - 1) {
                currentSlide++;
                updateCarousel();
            }
        }

        function prevSlide() {
            if (currentSlide > 0) {
                currentSlide--;
                updateCarousel();
            }
        }

        function goToSlide(index) {
            currentSlide = index;
            updateCarousel();
        }

        // View switching functionality
        function switchView(view) {
            const carouselView = document.getElementById('carousel-view');
            const gridView = document.getElementById('grid-view');
            const buttons = document.querySelectorAll('.view-btn');

            buttons.forEach(btn => btn.classList.remove('active'));

            if (view === 'carousel') {
                carouselView.classList.remove('hidden');
                gridView.classList.add('hidden');
                buttons[0].classList.add('active');
            } else {
                carouselView.classList.add('hidden');
                gridView.classList.remove('hidden');
                buttons[1].classList.add('active');
            }
        }

        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            const carouselView = document.getElementById('carousel-view');
            if (!carouselView.classList.contains('hidden')) {
                if (e.key === 'ArrowLeft') {
                    prevSlide();
                } else if (e.key === 'ArrowRight') {
                    nextSlide();
                }
            }
        });

        // Initialize carousel
        document.addEventListener('DOMContentLoaded', function() {
            updateCarousel();

            // Auto-play carousel (optional)
            // setInterval(function() {
            //     if (currentSlide < totalSlides - 1) {
            //         nextSlide();
            //     } else {
            //         currentSlide = 0;
            //         updateCarousel();
            //     }
            // }, 5000);
        });

        // Touch/swipe support for mobile
        let startX = 0;
        let endX = 0;

        document.addEventListener('touchstart', function(e) {
            startX = e.touches[0].clientX;
        });

        document.addEventListener('touchend', function(e) {
            endX = e.changedTouches[0].clientX;
            handleSwipe();
        });

        function handleSwipe() {
            const carouselView = document.getElementById('carousel-view');
            if (!carouselView.classList.contains('hidden')) {
                const swipeThreshold = 50;
                const swipeDistance = startX - endX;

                if (Math.abs(swipeDistance) > swipeThreshold) {
                    if (swipeDistance > 0) {
                        nextSlide(); // Swipe left - next slide
                    } else {
                        prevSlide(); // Swipe right - previous slide
                    }
                }
            }
        }
    </script>
</body>
</html>